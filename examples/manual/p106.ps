% Can't run automatically, since it doesn't terminate:
% should print an event every 12 seconds.

{
  createevent dup begin
    /Name /Hello def
  end expressinterest
  {
    awaitevent ==
    createevent dup begin
      /Name /Hello def
      /TimeStamp currenttime 0.2 add def
    end sendevent
  } loop
} fork

createevent dup begin
  /Name /Hello def
end sendevent

waitprocess
